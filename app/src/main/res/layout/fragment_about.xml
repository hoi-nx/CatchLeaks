<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="48dp"
    app:layout_collapseMode="parallax"
    >

  <ImageView
      android:id="@+id/banner_icon"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="8dp"
      android:contentDescription="CatchUp icon"
      android:src="@mipmap/ic_launcher"
      />

  <TextView
      android:id="@+id/banner_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:text="@string/app_name"
      android:textAppearance="@style/TextAppearance.AppCompat.Title"
      />

  <io.sweers.catchup.base.ui.widget.BaselineGridTextView
      android:id="@+id/banner_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:gravity="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColorLink="?android:textColorPrimary"
      tools:text="An app for catching up on things.\n\nv1.0\nBy Zac Sweers  â€”  Source code"
      />
  <Button
      android:id="@+id/button_learn_more"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Learn more"
      android:textColor="#000"
      />
</LinearLayout>
